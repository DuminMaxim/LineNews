@model Domain.Entity.Blog

@{
    ViewBag.Title = "Редактор";
}

@using (Html.BeginForm("Editor", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>
            Редактор новостей
        </h3>
        <hr />
        @Html.HiddenFor(Model => Model.BlogId)

        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10 ">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control editor_descr", rows = 10 })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <!--IMAGE-->

        <div class="form-group">
            <label class="col-md-2 control-label">Картинка</label>
            <div class="col-md-10">
                <input type="file" name="image" class="form-control" accept="image/*" />
            </div>
        </div>


        <!--BUTTONS-->

            <div class="form-group">
                <div class="col-md-offset-2 col-md-5">
                    <input type="submit" value="Добавить" class="btn btn-primary" />
                    <a href="@ViewBag.returnUrl" class="btn btn-default">Отмена</a>
                </div>
           </div>
    </div>
}
