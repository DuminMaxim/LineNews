@model List<Domain.Entity.User>

@{
    ViewBag.Title = "UserAdministration";
}



<div class="panel admin_panel">
    <div class="panel-heading panel-default">
        <h3> Список пользователей</h3>
    </div>

    <div class="panel-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th class="text-center">Логин</th>
                    <th class="text-center">Email</th>
                    <th class="text-center">Действие</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td class="text-center">@user.Login</td>
                        <td class="text-center">@user.Email</td>
                        @using (Html.BeginForm())
                        {
                            <input type="hidden" name="login" value="@user.Login" />
                            if (user.IsBlocked)
                            {
                                <td class="text-center">
                                    <input type="submit" value="Разблокировать" class="btn btn-danger btn-xs" />
                                </td>
                            }
                            else
                            {
                                <td class="text-center">
                                    <input type="submit" value="Блокировать" class="btn btn-success btn-xs" />
                                </td>
                            }
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
